<!--
    GridGain Spring configuration file.

    When starting a standalone GridGain node, you need to execute the following command:
    {GRIDGAIN_HOME}/bin/ggstart.{bat|sh} path-to-this-file/default-config-ggfs.xml

    When starting GridGain from Java IDE, pass path to this file into GridGain:
    GridGain.start("path-to-this-file/default-config-ggfs.xml");

    NOTE:
    ====
    This configuration file should be used with data nodes only. For nodes not
    responsible for caching files, such as submitter or job-scheduler nodes, use 'default-config-ggfs-client.xml'.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <!--
        Configuration below demonstrates how to setup a GridGain node.
    -->
    <bean id="grid.cfg" class="org.gridgain.grid.GridConfiguration" scope="singleton">
        <!-- Cache configurations. -->
        <property name="cacheConfiguration">
            <list>
                <!--
                    Local cache configuration.
                -->
                <bean class="org.gridgain.grid.cache.GridCacheConfiguration">
                    <property name="name" value="partitioned"/>
                    <property name="cacheMode" value="PARTITIONED"/>
                </bean>

                <!--
                    Replicated cache configuration.
                -->
                <bean class="org.gridgain.grid.cache.GridCacheConfiguration">
                    <property name="name" value="replicated"/>
                    <property name="cacheMode" value="REPLICATED"/>
                </bean>

                <!--
                    Partitioned cache configuration.
                -->
                <bean class="org.gridgain.grid.cache.GridCacheConfiguration">
                    <property name="name" value="local"/>
                    <property name="cacheMode" value="LOCAL"/>
                </bean>
            </list>
        </property>

        <!-- Streamer configurations. -->
        <property name="streamerConfiguration">
            <list>
                <!--
                    Specify list of streamer configurations here.
                -->
            </list>
        </property>
    </bean>
</beans>
